{
  "manifest_version": 3,
  "name": "ADO Companion",
  "version": "1.0.0",
  "description": "Track Azure DevOps builds and pull requests at a glance.",
  "permissions": ["storage", "bookmarks", "alarms"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["https://dev.azure.com/*"]
}
